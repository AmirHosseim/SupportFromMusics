@page
@model SuportFromMusics.Pages.Sing.SingsList.BestSingsModel
@{
}
<head>

</head>
<body>
    @*<partial name="_SingsListNavBar" />*@
    <div class="col-lg-9 col-md-9 col-sm-10 col-xs-10" style="margin: 2rem">
        @foreach (var item in Model.showSings.SingDetails)
        {
            <div id="sings-card" class="col-lg-3 col-md-3 col-xs-5 col-sm-5" style="display: inline-block;margin: 3rem;">
                <img src="~/MusicAvatars/@(item.Name+item.SingerId+item.Id).jpg" width="60px" height="60px" />
                <hr />
                <table width="100%">
                    <tr>
                        <td class="h3">
                            @item.Name
                        </td>
                    </tr>
                    <tr>
                        <td class="h4">
                            @item.singType.Name
                        </td>
                    </tr>
                    <tr>
                        <td class="h6">
                            <b>زمان انتشار:</b> @item.SharedTime
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @item.singer.title
                        </td>
                    </tr>
                </table>
                <br />
                <table>
                    <tr>
                        <td>
                            <a asp-page="/Sing/SingDetail" asp-route-Id="@item.Id" class="btn btn-info">
                                مشخصات ترک
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
        }
    </div>
</body>