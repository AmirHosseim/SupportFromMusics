@page
@model SuportFromMusics.Pages.Sing.coments.AllcomentsModel
@{
}
<head>

</head>
<body>
    <div class="col-xl-6 col-md-8 col-sm-11" style="margin: 2cm;">
        <form method="post" id="addComentForm">
            <input type="hidden" asp-for="@Model.singDetailid" value="@Model.singDetailid" />
            <input asp-for="@Model.addComent.coment" id="ComentMessage" class="form-control" />
            <input type="submit" class="btn btn-success" value="ارسال" />

        </form>
    </div>

    <br />
    @foreach (var item in Model.Coments)
    {
        <div>
            <div class="card" style="margin:2cm;">
                <div class="card-header" style="background-color: gainsboro">
                    @item.user.UserName
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.coment</h5>
                    <p class="card-text">@item.sendTime.Year/@item.sendTime.Month/@item.sendTime.Day در @item.sendTime.Hour:@item.sendTime.Minute</p>
                </div>
            </div>
        </div>
    }
</body>

