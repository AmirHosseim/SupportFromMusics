@page
@model SuportFromMusics.Pages.AdminPanel.SingersManagerModel
@{
}
<head>

</head>
<body>

    @if (Model.showSingers.Singers.Count() != 0)
    {
        @foreach (var item in Model.showSingers.Singers)
        {
            <div class="card">
                <div class="card-header">
                    @item.title
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Gender</h5>
                    <p class="card-text">@item.Id</p> آیدی:
                    <p>@item.Followers.Count()</p> تعداد فالور:
                    <p>@item.ShortLink</p> لینک کوتاه:
                    <a asp-page="DeletSinger" asp-route-Id="@item.Id" class="btn btn-primary">حذف خواننده</a>
                </div>
            </div>
        }
    }
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        @if (Model.showSingers.CurrentPage > 1)
        {
            <a class="btn btn-primary" href="/AdminPanel/SingersManager?PageId=@(Model.showSingers.CurrentPage - 1)">
                قبلی
            </a>
            <a class="btn btn-primary" href="/AdminPanel/SingersManager?PageId=1">
                اولین صفحه
            </a>
        }
        @for (int i = 1; i <= Model.showSingers.PageCount; i++)
        {

            <div class="btn-group me-2" role="group" aria-label="First group">
                <a class="btn btn-primary @((i==Model.showSingers.CurrentPage) ? "active" : "")" href="/AdminPanel/SingersManager?PageId=@i">
                    @i
                </a>
            </div>
        }
        @if (Model.showSingers.CurrentPage < Model.showSingers.PageCount)
        {
            <a class="btn btn-primary" href="/AdminPanel/SingersManager?PageId=@(Model.showSingers.CurrentPage + 1)">
                بعدی
            </a>
            <a class="btn btn-primary" href="/AdminPanel/SingersManager?PageId=@Model.showSingers.PageCount">
                آخرین صفحه
            </a>
        }
    </div>
</body>