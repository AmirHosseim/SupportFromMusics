@page
@model SuportFromMusics.Pages.Account.SavesModel
@{
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    @if (Model.SaveSings.Count() != 0)
    {
        @foreach (var item in Model.SaveSings)
        {
            <div id="sings-card" class="col-lg-3 col-md-3 col-xs-5 col-sm-5" style="display: inline-block;margin: 3rem;">
                <img src="~/MusicAvatars/@(item.SingDetail.Name+item.SingDetail.SingerId+item.SingDetail.Id).jpg" width="60px" height="60px" />
                <hr />
                <table width="100%">
                    <tr>
                        <td class="h3">
                            @item.SingDetail.Name
                        </td>
                    </tr>
                    <tr>
                        <td class="h4">
                            @item.SingDetail.singer.title
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @item.SingDetail.singType.Name
                        </td>
                    </tr>
                    <tr>
                        <td class="h6">
                            <b>زمان انتشار:</b> @item.SingDetail.SharedTime.Year / @item.SingDetail.SharedTime.Day / @item.SingDetail.SharedTime.Month
                        </td>
                    </tr>

                </table>
                <a href="/Sing/SingDetail?Id=@item.SingDetail.Id" class="btn btn-info">
                    مشاهده مشخصات
                </a>
            </div>
            <br />
        }
    }
    else
    {
        <div align="center">
            <h2 class="text text-danger">
                هنوز آهنگی را ذخیره نکردید
            </h2>
        </div>
    }
</body>