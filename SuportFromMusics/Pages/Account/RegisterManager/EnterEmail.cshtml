@page
@model SuportFromMusics.Pages.Account.RegisterManager.EnterEmailModel
@{
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/Account/EnterEmail.css" type="text/css" />
</head>
<script src="~/js/Account/EnterEmail.js">
</script>
<body align="center" dir="rtl">
    <div align="center">
        <table id="LevelOfSubname" class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
            <tr>
                <td id="lvl1">
                    <P>
                        ثبت ایمیل
                    </P>
                </td>
                <td id="lvl2">
                    <P>
                        تایید ایمیل
                    </P>
                </td>
                <td id="lvl3">
                    <P>
                        ثبت نام
                    </P>
                </td>
            </tr>
        </table>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" align="center" id="divForm">
        <form method="post">
            <label for="InputEmail" class="form-label">آدرس ایمیل</label>
            <input type="email" id="InputEmail" class="form-control" aria-describedby="passwordHelpBlock" placeholder="ایمیل"
                   asp-for="@Model.addUservm.Email" />
            <div id="passwordHelpBlock" class="form-text">
                کاربر گرامی ایمیل شما به هیچ وجه نمایش گذاشته نخواهد شد. پس از اطمینان از ایمیلتان دکمه 'درخواست رمز عبور' را وارد کنید
            </div>
            <input type="submit" class="btn btn-primary" value="در خواست رمز عبور" onclick="return CheckForm()" />
            <h4 id="ErrorMessage"></h4>
            <h4 style="color: red">
                @ViewBag.Error
            </h4>
        </form>
    </div>
</body>