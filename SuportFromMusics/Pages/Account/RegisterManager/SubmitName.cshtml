@page
@model SuportFromMusics.Pages.Account.RegisterManager.SubmitNameModel
@{
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Account/SubmitName.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body align="center" dir="rtl">
    <div align="center">
        <table id="LevelOfSubname" class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
            <tr>
                <td id="lvl1">
                    <P>
                        ثبت ایمیل
                    </P>
                </td>
                <td id="lvl2">
                    <P>
                        تایید ایمیل
                    </P>
                </td>
                <td id="lvl3">
                    <P>
                        ثبت نام
                    </P>
                </td>
            </tr>
        </table>
    </div>
    <div align="center">
        <div id="Bigest" align="right" class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <form width="100%" name="SubNameForm" method="post">
                <div class="col-12">
                    <table id="formTable">
                        <tr>
                            <td>نام</td>
                            <td>نام خانوادگی</td>
                        </tr>
                        <tr id="NameDetail">
                            <td>
                                <input type="hidden" id="IFName" asp-for="@Model.vm.Email" value="@Model.Email" />
                            </td>
                            <td>
                                <input type="text" placeholder="نام کاربری" id="UserName" asp-for="@Model.vm.UserName" />
                            </td>
                        </tr>
                    </table>
                    <div id="Password" class="col-12" align="center">
                        <div class="passwordInput col-12">
                            <lable>رمز عبور</lable>
                            <input type="password" placeholder="رمز عبور" id="IPassword" asp-for="@Model.vm.Password" />
                        </div>
                        <div class="passwordInput col-12">
                            <lable>تکرار رمز عبور</lable>
                            <input type="password" placeholder="تکرار رمز عبور" id="IRPassword" />
                        </div>
                    </div>
                </div>
                <div id="divSubmit">
                    <button type="submit" id="btnSubmit" class="btn btn-primary" onclick="return checkForm()">
                        ثبت نام
                    </button>
                </div>
                <h4 id="ErrorMessage"></h4>
            </form>
        </div>
    </div>
    <script>
        var UserName = document.getElementById('UserName');
        var Password = document.getElementById('IPassword');
        var RepeatPassword = document.getElementById('IRPassword');
        var ErrorEleman = document.getElementById('ErrorMessage');


        function checkForm() {
            if (UserName.value == null) {
                ErrorEleman.innerHTML = "لطفا نام کاربری را وارد کنید";
                return false;
            }
            else if (Password.value == "") {
                ErrorEleman.innerHTML = "لطفا رمز عبور را وارد کنید";
                return false;
            }
            else if (Password.length < 6) {
                ErrorEleman.innerHTML = "رمز عبور نمی توانذ کمتر از 6 کاراکتر باشد";
                return false;
            }
            else if (RepeatPassword.value == "") {
                ErrorEleman.innerHTML = "لطفا تکرار رمز عبور را وارد کنید";
                return false;
            }
            else if (Password.value != RepeatPassword.value) {
                ErrorEleman.innerHTML = "تکرار رمز عبور صحیح نمی باشد";
                return false;
            }
        }
    </script>
</body>
